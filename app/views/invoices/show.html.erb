<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="d-flex flex-row p-2"> <img src="https://i.imgur.com/WBIJcLu.jpg" width="48">
                    <div class="d-flex flex-column"> <span class="font-weight-bold"> Invoice</span> <small>ID#<%= @invoice.id %></small> </div>
                </div>
                <hr>
                <div class="table-responsive p-2">
                    <table class="table table-borderless">
                        <tbody>
                            <tr class="add">
                                <td>To</td>
                                <td>From</td>
                            </tr>
                            <tr class="content">
                                <td class="font-weight-bold"><%= @invoice.client.company %><br>Attn:<%= current_user.first_name+" "+current_user.last_name%> <br><%= @invoice.client.phone_number %></td>
                                <td class="font-weight-bold"><%= current_user.company %> <br>Attn:<%= current_user.first_name+" "+current_user.last_name%> <br><%= current_user.phone_number %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <hr>
                <div class="products p-2">
                    <table class="table table-borderless">
                        <tbody>
                            <tr class="add">
                                <td>Booking period</td>
                                <td>Garage</td>
                                <td>Parking spaces</td>
                                <td class="text-center">Total</td>
                            </tr>
                            <tr class="content">
                                <td><%= @invoice.start_date %> to <%= @invoice.end_date %></td>
                                <td><%= @garage.location+" - "+@garage.name %></td>
                                <td class="text-center"><% @invoice.parking_spaces.each do |space| %>
                                #<%= space.id %>
                                  <% end %></td>
                                <td class="text-center"><%= @invoice.price %>â‚¬</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <hr>
                <div class="address p-2">
                    <table class="table table-borderless">
                        <tbody>
                            <tr class="add">
                            </tr>
                            <tr class="content">
                                <td>         <a class="btn btn-primary" href="<%= @invoice.payment_url %>" role="button">Share this invoice</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
